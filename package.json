{
  "name": "popmart-bot",
  "version": "1.0.0",
  "description": "Popmart automation bot",
  "main": "popmart.js",
  "scripts": {
    "build": "pkg popmart.js --targets node18-win-x64 --output dist/popmart-bot.exe",
    "build-all": "pkg popmart.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist",
    "start": "node popmart.js"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "options": [
      "--no-bytecode"
    ]
  },
  "dependencies": {
    "nodemailer": "^6.10.1",
    "prompt-sync": "^4.2.0",
    "puppeteer": "^24.14.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
